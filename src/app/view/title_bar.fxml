<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>


<HBox alignment="CENTER_RIGHT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.TitleBarController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <FontAwesomeIconView fill="#fed330" glyphName="CIRCLE" onMouseClicked="#min">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
        </FontAwesomeIconView>
        <FontAwesomeIconView fill="#26de81" glyphName="CIRCLE" onMouseClicked="#max">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
        </FontAwesomeIconView>
        <FontAwesomeIconView fill="#ff3b49" glyphName="CIRCLE" onMouseClicked="#close">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
        </FontAwesomeIconView>
    </children>
</HBox>
